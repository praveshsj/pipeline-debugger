# Database
DATABASE_URL=postgresql://user:password@localhost:5432/pipeline_debugger
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_ORG=your_github_org  # Optional: default org for repos

# Airflow Integration (optional - can be per-user)
AIRFLOW_BASE_URL=http://localhost:8080
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=admin

# Application Settings
APP_NAME=Pipeline Debugger
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# API Settings
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Feature Flags
ENABLE_GITHUB_INTEGRATION=true
ENABLE_AUTO_PR_CREATION=false  # Require manual approval for MVP
ENABLE_KNOWLEDGE_BASE_LEARNING=true

# Rate Limiting
CLAUDE_API_MAX_RETRIES=3
CLAUDE_API_TIMEOUT_SECONDS=60
GITHUB_API_MAX_RETRIES=3

# Monitoring (optional)
SENTRY_DSN=
POSTHOG_API_KEY=
